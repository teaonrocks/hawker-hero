<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
  <%- include('partials/navbar') %>
  <%- include('partials/flash-messages') %>
  <div class="container mt-4">
    <h2><i class="bi bi-pencil-square"></i> Edit Favorite</h2>
    <form action="/favorites/update/<%= favorite.id %>" method="POST" class="mt-3">
      <div class="mb-3">
        <label for="stall_id" class="form-label">Stall</label>
        <select class="form-select" id="stall_id" name="stall_id" required>
          <% stalls.forEach(stall => { %>
            <option value="<%= stall.id %>" <%= stall.id === favorite.stall_id ? "selected" : "" %>><%= stall.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label for="food_id" class="form-label">Food Item (optional)</label>
        <select class="form-select" id="food_id" name="food_id">
          <option value="">-- Select a food item --</option>
          <% foodItems.forEach(food => { %>
            <option value="<%= food.id %>" data-stall-id="<%= food.stall_id %>" <%= food.id === favorite.food_id ? "selected" : "" %>><%= food.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label for="notes" class="form-label">Notes</label>
        <textarea class="form-control" id="notes" name="notes" rows="3"><%= favorite.notes %></textarea>
      </div>
      <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Save Changes</button>
      <a href="/favorites" class="btn btn-secondary ms-2">Cancel</a>
    </form>
  </div>

  <script>
    // Food item filtering based on selected stall
    const stallSelect = document.getElementById('stall_id');
    const foodSelect = document.getElementById('food_id');
    const initialStallId = stallSelect.value;
    const initialFoodId = '<%= favorite.food_id || "" %>';

    function filterFoodItems() {
      const selectedStallId = stallSelect.value;
      const currentFoodId = foodSelect.value;
      
      // Store all options if not already stored
      if (!foodSelect.allOptions) {
        foodSelect.allOptions = Array.from(foodSelect.options);
      }
      
      // Clear current options
      foodSelect.innerHTML = '<option value="">-- Select a food item --</option>';
      
      // Add options that match the selected stall
      foodSelect.allOptions.forEach(option => {
        if (!option.value) return; // Skip the empty option
        
        const optionStallId = option.getAttribute('data-stall-id');
        if (optionStallId === selectedStallId) {
          foodSelect.appendChild(option.cloneNode(true));
        }
      });
      
      // Restore food selection if it belongs to the current stall
      if (currentFoodId) {
        const matchingOption = Array.from(foodSelect.options).find(opt => opt.value === currentFoodId);
        if (matchingOption) {
          foodSelect.value = currentFoodId;
        }
      }
    }

    // Initial filtering when page loads
    filterFoodItems();

    // Filter when stall selection changes
    stallSelect.addEventListener('change', function() {
      filterFoodItems();
    });
  </script>
</body>
</html>