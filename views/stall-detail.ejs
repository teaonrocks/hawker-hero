<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= stall.name %> - Hawker Hero</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
			rel="stylesheet"
		/>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
			rel="stylesheet"
		/>
	</head>
	<body>
		<%- include('partials/navbar') %> <%- include('partials/flash-messages') %>

		<div class="container mt-4">
			<!-- Back Button -->
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="/stalls">Stalls</a></li>
					<li class="breadcrumb-item active" aria-current="page">
						<%= stall.name %>
					</li>
				</ol>
			</nav>

			<div class="row">
				<!-- Stall Information -->
				<div class="col-md-8">
					<div class="card">
						<% if (stall.image_url) { %>
						<img
							src="/images/<%= stall.image_url %>"
							class="card-img-top"
							alt="<%= stall.name %>"
							style="height: 300px; object-fit: cover"
						/>
						<% } else { %>
						<div
							class="card-img-top bg-light d-flex align-items-center justify-content-center"
							style="height: 300px"
						>
							<i class="bi bi-image text-muted" style="font-size: 5rem"></i>
						</div>
						<% } %>

						<div class="card-body">
							<h1 class="card-title"><%= stall.name %></h1>
							<p class="card-text">
								<i class="bi bi-geo-alt text-primary"></i>
								<strong>Location:</strong> <%= stall.location %>
							</p>
							<% if (stall.center_name) { %>
							<p class="card-text">
								<i class="bi bi-building text-info"></i>
								<strong>Hawker Center:</strong> <%= stall.center_name %>
							</p>
							<% } %> <% if (stall.opening_hours) { %>
							<p class="card-text">
								<i class="bi bi-clock text-warning"></i>
								<strong>Opening Hours:</strong> <%= stall.opening_hours %>
							</p>
							<% } %>
							<p class="card-text">
								<i class="bi bi-tag text-success"></i>
								<strong>Cuisine:</strong>
								<span class="badge bg-primary"><%= stall.cuisine_type %></span>
							</p>

							<!-- Favorite Button -->
							<% if (user) { %>
							<form action="/favorites/add" method="POST" class="d-inline">
								<input type="hidden" name="stall_id" value="<%= stall.id %>" />
								<input
									type="hidden"
									name="redirect_to"
									value="/stalls/<%= stall.id %>"
								/>
								<button type="submit" class="btn btn-outline-danger">
									<i class="bi bi-heart"></i> Add to Favorites
								</button>
							</form>
							<% } %>

							<!-- Admin Actions -->
							<% if (user && user.role === 'admin') { %>
							<div class="mt-3">
								<a
									href="/stalls/<%= stall.id %>/edit"
									class="btn btn-outline-primary"
								>
									<i class="bi bi-pencil"></i> Edit Stall
								</a>
								<form
									method="POST"
									action="/stalls/<%= stall.id %>?_method=DELETE"
									onsubmit="return confirm('Are you sure you want to delete this stall?')"
									class="d-inline"
								>
									<button type="submit" class="btn btn-outline-danger">
										<i class="bi bi-trash"></i> Delete Stall
									</button>
								</form>
							</div>
							<% } %>
						</div>
					</div>
				</div>

				<!-- Sidebar -->
				<div class="col-md-4">
					<!-- Food Items -->
					<div class="card">
						<div class="card-header">
							<h5><i class="bi bi-cup-straw"></i> Food Items</h5>
						</div>
						<div class="card-body">
							<% if (foodItems && foodItems.length > 0) { %>
							<div class="list-group list-group-flush">
								<% foodItems.forEach(item => { %>
								<div
									class="list-group-item d-flex justify-content-between align-items-center"
								>
									<div>
										<h6 class="mb-1"><%= item.name %></h6>
										<% if (item.description) { %>
										<small class="text-muted"><%= item.description %></small>
										<% } %>
									</div>
									<% if (item.price) { %>
									<span class="badge bg-success rounded-pill"
										>$<%= item.price %></span
									>
									<% } %> <% if (user) { %>
									<form action="/favorites/add" method="POST" class="d-inline">
										<input
											type="hidden"
											name="food_id"
											value="<%= item.id %>"
										/>
										<input
											type="hidden"
											name="redirect_to"
											value="/stalls/<%= stall.id %>"
										/>
										<button type="submit" class="btn btn-sm btn-outline-danger">
											<i class="bi bi-heart"></i>
										</button>
									</form>
									<% } %>
								</div>
								<% }) %>
							</div>
							<% } else { %>
							<p class="text-muted">No food items listed yet.</p>
							<% } %>
						</div>
					</div>

					<!-- Quick Info -->
					<div class="card mt-3">
						<div class="card-header">
							<h5><i class="bi bi-info-circle"></i> Quick Info</h5>
						</div>
						<div class="card-body">
							<p><strong>Stall ID:</strong> #<%= stall.id %></p>
							<p><strong>Cuisine:</strong> <%= stall.cuisine_type %></p>
							<p><strong>Location:</strong> <%= stall.location %></p>
							<% if (stall.center_name) { %>
							<p><strong>Hawker Center:</strong> <%= stall.center_name %></p>
							<% } %> <% if (stall.opening_hours) { %>
							<p><strong>Opening Hours:</strong> <%= stall.opening_hours %></p>
							<% } %>
						</div>
					</div>
				</div>
			</div>
		</div>

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
